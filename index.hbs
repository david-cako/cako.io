{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}
<meta name="google-site-verification" content="CZuJBVbmjQdYaKUXQ6pDcDQ1Y9dH13s1oeZmN_AZpu4" />

<header class="site-header outer">
    {{> "site-nav"}}
</header>

{{!-- The big featured header, it uses blog cover image as a BG if available --}}
{{!-- The main content area --}}
<main id="site-main" class="site-main outer" role="main">
    <div class="index inner" style="position: relative">
        {{> "cako-search-feed"}}
       <div id="cako-post-feed-outer">
           <div id="cako-intro">A blog and software consultancy by <a id="name-link" href="https://davidcako.com">David Cako</a></div>
           <div id="cako-post-feed">
            <div class="cako-featured">
                <div class="cako-featured-header">Frontier</div>
                <div class="cako-post">
                    <a href="/mesquite/" class="cako-post-link yellow">
                        <div class="cako-post-title">Mesquite</div>
                        <div class="cako-post-date-outer">
                            <time class="cako-post-date" datetime="2020-10-19">19 October 2020</time>
                        </div>
                    </a>
                </div>
                <div class="cako-post">
                    <a href="/torsion/" class="cako-post-link yellow">
                        <div class="cako-post-title">Torsion</div>
                        <div class="cako-post-date-outer">
                            <time class="cako-post-date" datetime="2020-10-24">24 October 2020</time>
                        </div>
                    </a>
                </div>
                <div class="cako-post">
                    <a href="/cash-and-cargo/" class="cako-post-link yellow">
                        <div class="cako-post-title">Cash and Cargo</div>
                        <div class="cako-post-date-outer">
                            <time class="cako-post-date" datetime="2021-02-23">23 February 2021</time>
                        </div>
                    </a>
                </div>
                <div class="cako-post">
                    <a href="/silas/" class="cako-post-link yellow">
                        <div class="cako-post-title">Silas</div>
                        <div class="cako-post-date-outer">
                            <time class="cako-post-date" datetime="2021-04-25">25 April 2021</time>
                        </div>
                    </a>
                </div>
            </div>
                {{#foreach posts}}

                    {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
                    {{> "post-card"}}

                {{/foreach}}
            </div>
        </div>
    </div>
    <script type="module" src="{{asset "js/postLoadingSpinner.js"}}"></script>
</main>
